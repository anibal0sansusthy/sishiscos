extends ../templates/default

block content

  include ../templates/reportes/navresportes
  
  div(class=['ui', 'container', 'grid', 'stackable','banner'])
    div(class=['ten', 'wide', 'column','form-holder'])

      h2(class=['ui', 'header', 'blue', 'dividing','centered','form-head'])= 'Reporte de especialidad'

      div(class='form-nuevocargo')
        form(class=['ui', 'form'] action='http://localhost:3000/reespecialidad' method='post')
          div(class=['ui', 'field'])
            label(for='fechainicio')= 'Fecha Inicio'
            input(type= 'date' name='fechainicio' placeholder='Fecha inicio')
          div(class=['ui', 'field'])
            label(for='fechafin')= 'Fecha Fin'
            input(type= 'date' name='fechafin' placeholder='Fecha fin')
          div(class=['ui', 'field'])
            label(for='especialidadId')= 'Especialidad'
            select(id="especialidadId" name = "dropdownespecialidad")
          button(class=['ui', 'button', 'large', 'blue'])= 'Reporte por Especialidad'
         
  script(src='/javascripts/cargarEspecialidad.js')